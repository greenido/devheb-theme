<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; מאמרים חדשים</a>
    {{else}}
    	<span class="newer-posts pagination-none">&larr; מאמרים חדשים</span>
    {{/if}}
    <span class="page-number">דף {{page}} מ {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">מאמרים ישנים &rarr;</a>
    {{else}}
    	<span class="older-posts pagination-none">מאמרים ישנים &rarr;</span>
    {{/if}}
</nav>
